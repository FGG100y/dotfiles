# cat *file's contents about some 'key'
Bashalias () {
    cat < ~/.bashrc_aliases | grep "$1"
}
# quick check vimrc key-combinations
Vimalias () {
    cat < ~/.vimrc | grep "$1"
}


# copy .gitignore file to .
Gignore () {
    myfile="$HOME"/fggit/GitHub_repos/gitignore/"$1".gitignore
    if [ -f "$myfile" ]; then
        cp "$myfile" ./.gitignore
    else
        echo "No such file/dir"
    fi
}

# ---------
# fzf grops
# ---------
# cdf - cd into the directory of the selected file
cdf() {
   local file
   local dir
   file=$(fzf +m -q "$1") && dir=$(dirname "$file") && cd "$dir" || exit
}

# --------------
# ssh connection
# --------------
SVRPORT=8899
# connect to jupyterlab on remote server
function jlab2re() {
    svrport="${1:-$SVRPORT}"
    remote_username=UserName
    remote_hostname=Your.Host.net
    remote_hostport=10086
    url="http://localhost:$svrport"
    echo "Opening $url"
    xdg-open "$url"
    cmd="ssh -CNL localhost:$svrport:localhost:$svrport $remote_username@$remote_hostname -p$remote_hostport"
    echo "Running '$cmd'"
    eval "$cmd"
}
